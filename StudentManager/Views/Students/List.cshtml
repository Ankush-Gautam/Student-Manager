@using StudentManager.Models.Entities
@model List<StudentManager.Models.Entities.Student>

@if (!Model.Any())
{
    <p>No Record Found!</p>
}
else
{
<h2 class="my-5">List of Students</h2>

<table class="table">
    <thead>
    <tr>
        <th>SN</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Subscription</th>
        <th>Actions</th>
    </tr>
    </thead>

    <tbody>
    @{ var sn = 1; }
    @foreach (var student in Model)
    {
        <tr>
            <td>@sn</td>
            <td>@student.Name</td>
            <td>@student.Email</td>
            <td>@student.Phone</td>
            <td>@(student.IsSubscribed ? "Yes": "No")</td>
            <td class="d-flex">
                <a class="btn btn-warning" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                <form asp-action="Delete" asp-route-id="@student.Id" method="post" class="ms-3">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this student?')">Delete</button>
                </form>
            </td>
        </tr>
    sn++;
    }
    
    
    </tbody>
</table>
}
