@model StudentManager.Models.AddStudentVm

@{ ViewData["Title"] = "Add Students"; }

<h2 class="my-5">Add Student</h2>

<div class="w-50 ">

<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="tel" class="form-control" asp-for="Phone"/>
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="IsSubscribed" asp-for="IsSubscribed"/>
        <label class="form-label" for="IsSubscribed">Subscribe?</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>
    
</div>